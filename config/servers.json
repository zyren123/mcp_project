{
  "mcpServers": {
    "default": {
      "command": "python",
      "args": [
        "server.py"
      ],
      "name": "默认服务器",
      "description": "主要功能服务器",
      "enable": true
    },
    "add_server": {
      "command": "python",
      "args": [
        "src/mcp_project/servers/calculator.py"
      ],
      "name": "计算器服务器",
      "description": "提供计算功能",
      "enable": true
