      ],
      "name": "文件处理器服务器",
      "description": "提供文件读写功能",
      "enable": true
    },
    "python_excutor": {
      "command": "python",
      "args": [
        "src/mcp_project/servers/python_excutor.py"
      ],
      "name": "Python执行器服务器",
      "description": "提供Python代码执行功能",
      "enable": true
